{
  "request": {
    "method": "POST",
    "urlPathPattern": "/api/getToken/([a-z]*)",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$.grant_type",
        "matchesJsonPath": "$.client_id",
        "matchesJsonPath": "$.client_secret",
        "matchesJsonPath": "$.scope",
        "matchesJsonPath": "$.username",
        "matchesJsonPath": "$.password"
      }
    ]
  },
  "response": {
    "status": 200,
    "bodyFileName": "tokenFile.json",
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
